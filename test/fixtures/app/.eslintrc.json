{
  "root": true,
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "classes": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "16.4"
    }
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true
      }
    ]
  }
}
